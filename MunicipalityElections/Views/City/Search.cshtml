@model MunicipalityElections.ViewModels.CityCandidatesViewModel
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Search Results</h2>
<div class="form-group">
    @{
        var max = Model.CityCandidates.ToArray().Length;
        string[] cname = new string[Model.CityCandidates.Capacity];
        string[] cvote = new string[Model.CityCandidates.Capacity];
        for (int i = 0; i < max; i++)
        {
            cname[i] = Model.CityCandidates[i].cname;
            cvote[i] = Model.CityCandidates[i].cvoted;
        }
        var myChart = new Chart(width: 600, height: 400)
           .AddTitle(Model.City.cauthority)
           .AddSeries(chartType: "bar",
              xValue: cname,
              yValues: cvote)
           .Write();
    }
</div>